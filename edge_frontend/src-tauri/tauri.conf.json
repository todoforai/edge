{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "todoforai-edge",
  "mainBinaryName": "todoforai-edge",
  "identifier": "com.todoforai.edge",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1440",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TODO for AI Edge",
        "width": 800,
        "height": 1000
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": {
      "linux": [
        "deb",
        "rpm"
      ],
      "windows": [
        "msi"
      ],
      "macos": [
        "dmg",
        "app"
      ]
    },
    "resources": [
      "resources/python/ws_sidecar.py"
    ],
    "externalBin": [
      "binaries/todoforai-edge-sidecar"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null,
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true
    },
    "linux": {
      "deb": {
        "desktopTemplate": "desktop/todoforai-edge.desktop"
      }
    }
  },
  "plugins": {
    "deep-link": {
      "schemes": [
        "todoforai-edge"
      ],
      "linux": {
        "register": false
      },
      "windows": {
        "register": true
      },
      "macOS": {
        "register": true
      }
    }
  }
}