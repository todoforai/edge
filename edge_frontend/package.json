{
  "name": "todoforai-edge",
  "private": true,
  "version": "0.12.2",
  "type": "module",
  "scripts": {
    "postinstall": "mkdir -p node_modules/@todoforai && cp -al ../../packages/shared-fe ../../packages/shared-fbe ../../packages/shared-fer node_modules/@todoforai/",
    "update": "(cd ../../packages && git pull) && bun install",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "install:deb": "tauri build --bundles deb && sudo dpkg -i \"src-tauri/target/release/bundle/deb/todoforai-edge_$(node -p \"require('./package.json').version\")_amd64.deb\"",
    "install:msi": "tauri build --bundles msi && powershell -Command \"Start-Process msiexec -ArgumentList '/i', 'src-tauri/target/release/bundle/msi/todoforai-edge_$(node -p \"require('./package.json').version\")_x64_en-US.msi', '/quiet' -Verb RunAs\"",
    "tauri:dev:prod-mode": "TODOFORAI_FORCE_PYTHON=1 yarn tauri dev",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-deep-link": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.2.1",
    "@tauri-apps/plugin-store": "^2.0.0",
    "@typescript-eslint/parser": "^8.32.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.535.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.17",
    "zod": "^4.2.1",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tauri-apps/cli": "^2",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
